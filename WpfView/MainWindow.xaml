<Window x:Class="WpfView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfView"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
    
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open">
                    <MenuItem Header="From File" Command="{Binding LoadTextFromFileCommand}" />                    
                </MenuItem>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding CloseWindowCommand}"/>
            </MenuItem>
        </Menu>

        <StackPanel>
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Text="{Binding Pattern, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding SearchControlViewModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:SearchControl DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
    </DockPanel>
</Window>
